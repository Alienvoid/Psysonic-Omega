		ButtonImage="Button_SovietHumvee"
		Side="SACOM"
		SubGroupPriority="305"
		EditorSorting="UNIT"
		HealthBoxHeightOffset="20"		
		BuildTime="9"
		CommandSet="SovietStalkerCommandSet"
		KindOf="SELECTABLE CAN_ATTACK CAN_CAST_REFLECTIONS SCORE VEHICLE CAN_BE_FAVORITE_UNIT TRANSPORT"
		ThreatLevel="10"
		WeaponCategory="GUN"
		VoicePriority="176"
		EditorName="SACOMHumvee"
		Description="Desc:SovietHumvee"
		TypeDescription="Type:SovietHumvee"
		UnitIntro="Soviet_Sickle_UnitIntro">
		<EquivalentTo>SovietHumvee</EquivalentTo>
		<DisplayName
			xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">Name:SovietHumvee</DisplayName>
		<ObjectResourceInfo>
			<BuildCost Account="=$ACCOUNT_ORE" Amount="850"/>
		</ObjectResourceInfo>
		<ArmorSet
			Armor="SovietAntiInfantryVehicleArmor"
			DamageFX="VehicleDamageFX" />
		<LocomotorSet
			id="DefaultLocomotorSet"
			Locomotor="TestReactiveLocomotorWHEELS"
			Condition="NORMAL"
			Speed="115.0" />
		<SkirmishAIInformation
			UnitBuilderStandardCombatUnit="true" />
		<Draws>
			<TruckDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				ExtraPublicBone="BONEGARRISON01 BONEGARRISON02 BONEGARRISON03 BONEGARRISON04 TurretPitch TURRET"
				TrackMarks="EXTireTrack2"
				TrackMarksOnlyWhenCorneringQuickly="false"
				TrackMarksLeftBone="TIRE01"
				TrackMarksRightBone="TIRE03"

				LeftFrontTireBone="TIRE01"
				RightFrontTireBone="TIRE03"

				LeftRearTireBone="TIRE02"
				RightRearTireBone="TIRE04"

				TireRotationMultiplier="0.2"
				PowerslideRotationAddition="1.25">
				<TreadTerrainParticles>AmphibiousTankTerrainParticleMapping</TreadTerrainParticles>

				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT"
					RetainSubObjects="true">
					<Model
						Name="SUHumvee_SKN" />
					<WeaponFireFXBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FIREFX01" />
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FIREFX01" />
					<Turret
						TurretNameKey="TURRET"
						TurretPitch="TurretPitch"
						TurretID="1" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="SUHumvee_SKN" />
					<ParticleSysBone
						BoneName="DAMAGE03"
						FXParticleSystemTemplate="VehicleDamageSmoke"
						FollowBone="true" />
				</ModelConditionState>     
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="SUHumvee_SKN" />
					<Texture
						Original="SUHumvee"
						New="SUHumvee_D" />
				  <ParticleSysBone
						BoneName="DAMAGE03"
						FXParticleSystemTemplate="VehicleDamageSmoke"
						FollowBone="true" />
				  <ParticleSysBone
						BoneName="DAMAGE03"
						FXParticleSystemTemplate="VehicleDamageFire"
						FollowBone="true" />
				  <ParticleSysBone
						BoneName="DAMAGE03"
						FXParticleSystemTemplate="VehicleDamageFire02"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="SUHumvee_SKN" />
				</ModelConditionState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FIRING_A">
					<Animation
						AnimationName="SUHumvee_ATK"
						AnimationMode="LOOP" />
				</AnimationState>
			</TruckDraw>
			
			
      <!-- include Headlight draw module. -->
      <xi:include
