			<TracerModelDraw
				id="ModuleTag_TracerModelDrawFrontVeterancy"
				MinLength="75.0"
				MaxLength="75.0"
				Width="15.0"
				MinSpeed="30"
				MaxSpeed="30"
				SweepSpeed="1.0"
				SpreadAngle="2.0"
				MinTracersPerFrame="0.3"
				MaxTracersPerFrame="0.3"
				FrameLifeTime="35"
				WeaponSlotType="PRIMARY_WEAPON"
				WeaponSlotID="1"
				Texture="FXTracerHeroic"
				UseAdditiveBlending="true"
				TracerHitFx="FX_BulletHitSovietVet">
				<HeadColor
					r="1.0"
					g="0.0"
					b="0.0"
					a="1.0" />
				<TailColor
					r="1.0"
					g="1.0"
					b="1.0"
					a="1.0" />
				<ObjectStatusValidation
					RequiredStatus="WEAPON_UPGRADED_01" />
			</TracerModelDraw>
			<xi:include
				href="DATA:Includes/ParachuteDrawSoviet.xml"
				xpointer="xmlns(n=uri:ea.com:eala:asset) xpointer(/n:ParachuteDraws/child::*)" />
		</Draws>
		<Behaviors>
			<WeaponSetUpdate
				id="ModuleTag_WeaponSetUpdate">
				<!-- front -->
				<WeaponSlotTurret
					ID="1"
					InterleavedStyle="INTERLEAVE_FIRST_AVAILABLE"
					WeaponChoiceCriteria="PREFER_LEAST_MOVEMENT"
					AllowInterleavedFiring="true">
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="SovietHumveeChaingun" />
					<TurretSettings
						TurretTurnRate="360"
						MinimumPitch="0d"
						AllowsPitch="true"
						PitchHeight="90%"
						TurretPitchRate="180"
						MinIdleScanTime="1.0s"
						MaxIdleScanTime="5.0s"
						MinIdleScanAngle="10.0"
						MaxIdleScanAngle="90.0"
						ComeToHaltJiggle="3d">
						<TurretAITargetChooserData
							IdleScanDelay="=$FAST_IDLE_SCAN_DELAY"
							CanAcquireDynamicIfAssignedOutOfRange="true" />
					</TurretSettings>
				</WeaponSlotTurret>
			</WeaponSetUpdate>

			<Physics
				id="ModuleTag_Physics" />
			<CreateObjectDie
				id="ModuleTag_CreateObjectDie"
				CreationList="SUHumvee_Die_OCL">
				<DieMuxData
					DeathTypes="ALL"
DeathTypesForbidden="ERASED" />
			</CreateObjectDie>
			<DestroyDie
				id="ModuleTag_Die">
				<DieMuxData
					DeathTypes="ALL" 
DeathTypesForbidden="ERASED"/>
			</DestroyDie>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL"
DeathTypesForbidden="ERASED" />
