				MaxSpeed="25"
				SweepSpeed="3.0"
				SpreadAngle="4.0"
				MinTracersPerFrame=".5"
				MaxTracersPerFrame=".8"
				FrameLifeTime="35"
				WeaponSlotType="PRIMARY_WEAPON"
