    <Budget>
      <AccountShare Account="PRODUCTION" Percent="75%"/>
      <AccountShare Account="DEFENSE" Percent="20%"/>
      <AccountShare Account="SPECIAL_OPERATIONS" Percent="5%"/>
      <AccountShare Account="SLUSH_FUND" Percent="0%"/>
