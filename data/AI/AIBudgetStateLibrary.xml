  <AIBudgetStateDefinition
    id="DefenseBudgetMOD">
    <Heuristic>
      <OpeningMoveHeuristic Complete="true"/>
      <EnemyNearbyHeuristic Distance="700.0" EnemyNearby="true" MinEnemyValue="1000">
