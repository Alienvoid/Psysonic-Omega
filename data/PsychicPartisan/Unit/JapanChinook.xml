		<LocomotorSet
			Locomotor="BasicHelicopterTaxiLocomotor"
			Condition="TAXIING"
			Speed="10" />
		<LocomotorSet
			Locomotor="SovietAntiGroundAircraftLocomotor"
			Condition="NORMAL"
			Speed="160.0" />

		<!-- Need ConquerMetricsOverrideDefendingAntiMask or else the TAXIING locomotor will make the AI try to build anti-ground units against this -->
		<SkirmishAIInformation
			UnitBuilderStandardCombatUnit="true"
			ConquerMetricsOverrideDefendingAntiMask="ANTI_AIRBORNE_VEHICLE" />

		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				ExtraPublicBone="WeaponA01 MainBody">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="JUQuin_skn" />
					<WeaponFireFXBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="WeaponA01" />
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="WeaponA01" />
					<Turret
						TurretNameKey="MainBody"
						TurretID="1" />
				</ModelConditionState>

				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="JUQuin_fp" />
				</ModelConditionState>

				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="JUQuin_SKN" />
					<Texture
						Original="JUQuin"
						New="JUQuin_D" />
					<ParticleSysBone
						BoneName="FX_Damage01"
						FXParticleSystemTemplate="ChopperDamageSmoke"
						FollowBone="true" />
				</ModelConditionState>

				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="JUQuin_SKN" />
					<Texture
						Original="JUQuin"
						New="JUQuin_D" />
					<ParticleSysBone
						BoneName="FX_Damage01"
						FXParticleSystemTemplate="ChopperDamageSmoke"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FX_Damage01"
						FXParticleSystemTemplate="ChopperDamageFire"
						FollowBone="true" />
				</ModelConditionState>

				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<Animation
						AnimationName="JUQuin_HVRA"
						AnimationMode="LOOP"
						AnimationBlendTime="15" />
				</AnimationState>

        <AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="OVER_WATER">
          <Animation
						AnimationName="JUQuin_HVRA"
						AnimationMode="LOOP"
						AnimationBlendTime="15" />
					<ParticleSysBone
						BoneName="FX_WINGTIP01"
						FXParticleSystemTemplate="FireHawkConTrail"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FX_WINGTIP02"
						FXParticleSystemTemplate="FireHawkConTrail"
						FollowBone="true" />
          <ParticleSysBone
						BoneName="None"
						FXParticleSystemTemplate="HelicopterMovingWaterWake"
						FollowBone="false" />
        </AnimationState>        
        
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING OVER_WATER">
					<Animation
						AnimationName="JUQuin_MOVA"
						AnimationMode="LOOP"
						AnimationBlendTime="15"/>
					<ParticleSysBone
						BoneName="FX_WINGTIP01"
						FXParticleSystemTemplate="FireHawkConTrail"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FX_WINGTIP02"
						FXParticleSystemTemplate="FireHawkConTrail"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="None"
						FXParticleSystemTemplate="HelicopterMovingWaterWake"
						FollowBone="false" />
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING">
					<Animation
						AnimationName="JUQuin_MOVA"
						AnimationMode="LOOP" 
						AnimationBlendTime="15"/>
					<ParticleSysBone
						BoneName="FX_WINGTIP01"
						FXParticleSystemTemplate="FireHawkConTrail"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FX_WINGTIP02"
						FXParticleSystemTemplate="FireHawkConTrail"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="OrcaDustDesert"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="OrcaDustRocksDesert"
						FollowBone="true" />
				</AnimationState>

  			<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="WALKING">
					<Animation
						AnimationName="JUQuin_HVRA"
						AnimationMode="MANUAL"
						AnimationBlendTime="15" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="OrcaDustDesert"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="OrcaDustRocksDesert"
						FollowBone="true" />
				</AnimationState>

			</ScriptedModelDraw>
			
		</Draws>
		
